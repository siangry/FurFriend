<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="12dp"
    android:background="#F9F9F9"
    android:layout_marginBottom="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/social_post_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/social_profile_avatar_frame"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:layout_marginEnd="8dp"
            android:contentDescription="User Avatar" />

        <TextView
            android:id="@+id/social_post_userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/username"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/social_postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/social_postImage"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:src="@drawable/ic_home"
        android:contentDescription="Post Image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/social_post_btnLike"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_social_like1_icon"
            android:contentDescription="Like" />

        <TextView
            android:id="@+id/social_post_likeCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp"
            android:layout_marginEnd="16dp" />

        <ImageButton
            android:id="@+id/social_post_btnComment"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@null"
            android:src="@drawable/ic_social_comment_icon"
            android:contentDescription="Comment" />

        <TextView
            android:id="@+id/social_post_commentCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="14sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/social_postTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and Time"
        android:textSize="12sp"
        android:textColor="#888888"
        android:layout_marginTop="4dp" />
</LinearLayout>
