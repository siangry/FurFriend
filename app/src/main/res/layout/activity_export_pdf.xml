<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="0dp">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="24dp"
        android:paddingBottom="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:id="@+id/exportPdfTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/exportPDF"
            android:fontFamily="@font/lexend_semi_bold"
            android:textSize="22sp"
            android:layout_marginStart="16dp"
            android:textColor="@color/black" />
    </LinearLayout>

    <!-- Mode Toggle -->
    <LinearLayout
        android:id="@+id/modeToggleGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <Button
            android:id="@+id/btnDaily"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_button"
            android:text="@string/daily"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend_regular"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnWeekly"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_button"
            android:text="@string/weekly"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend_regular"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnMonthly"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_white_button"
            android:text="@string/monthly"
            android:textColor="@color/black"
            android:fontFamily="@font/lexend_regular" />
    </LinearLayout>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/exportPdfSubtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/choosePdfMode"
        android:textColor="@color/bottom_nav_grey"
        android:fontFamily="@font/lexend_regular"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp" />

    <!-- Calendar/Picker Container -->
    <FrameLayout
        android:id="@+id/calendarContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp" />

    <!-- Export Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="32dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">
        <Button
            android:id="@+id/exportButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/orange_button_background"
            android:text="@string/export"
            android:textColor="@color/white"
            android:fontFamily="@font/lexend_bold"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout> 