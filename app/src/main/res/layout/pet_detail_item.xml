<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/petItem"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/pet_container"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_marginBottom="30dp">

    <ImageView
        android:id="@+id/petImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_pet_image" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="30dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/petName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/petType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet type"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/petAge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pet age"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/petAgeUnit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="Age unit"
                android:textColor="@color/dark_grey"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/petGender"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pet gender"
            android:textColor="@color/dark_grey"
            android:textSize="18sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/editPet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="150dp"
        android:src="@drawable/ic_see_more_black" />

</LinearLayout>